<div class="small-4 columns">
<div class="row">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |oi| %>
      <tr>
        <td><%=  link_to oi.item.name, oi.item %></td>
        <td><%= oi.quantity %></td>
        <td><%= oi.item.current_price %></td>
        <td><%= link_to("Delete", remove_from_cart_path(item_id: oi.item.id), class: 'button radius tiny')%></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>

<p>Subtotal: <%= @subtotal %> </p>
<p>Shipping: <%= @shipping %> </p>
<p>Grand Total: <%= @grand_total %> </p>
</div>
