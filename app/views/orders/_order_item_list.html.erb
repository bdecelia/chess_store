<table class="table table-striped">
  <thead>
    <tr>
      <% if current_user.role?(:shipper) %> <th>Shipped</th> <% end %>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @order_items.each do |oi| %>
      <tr>
        <% if current_user.role?(:shipper) %>
          <td><%= link_to("Ship", ship_item_path(order_item_id: oi.id), class: 'button radius tiny')%></td>
        <% end %>
        <td><%=  link_to oi.item.name, oi.item %></td>
        <td><%= oi.quantity %></td>
        <td><%= oi.item.current_price %></td>
        <td><%= link_to("Delete", remove_from_cart_path(item_id: oi.item.id), class: 'button radius tiny')%></td>
      </tr>
  <% end %>
  </tbody>
</table>
