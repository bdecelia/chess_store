<%= simple_form_for @credit_card, url: create_card_path, :html => {:method => :post, :class => 'form-horizontal'} do |f| %>
  <fieldset>
    <legend>Credit Card</legend>
		<%= f.input :number %>
		<%= f.input :expiration_month, collection:(1..12) %>
		<%= f.input :expiration_year%>
		<div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', cart_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
