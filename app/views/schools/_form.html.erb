<%= simple_form_for @school, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Enter Your School</legend>
		<%= f.input :name %>
		<%= f.input :street_1 %>
		<%= f.input :street_2 %>
		<%= f.input :city %>
		<%= f.input :state %>
		<%= f.input :zip %>
    <%= f.input :min_grade, collection:(1..12)%>
		<%= f.input :max_grade, collection:(1..12), input_html: {class: "school_dropdown"} %>
		<%= f.input :active %>
		<div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel',schools_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
